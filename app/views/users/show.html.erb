<li><%= @user.birthday %></li>
<li><%= @user.birthplace %></li>
<li><%= @user.background %></li>
<li><%= @user.ppb_carrier %></li>
<li><%= @user.hometown %></li>
<li><%= @user.hobby %></li>
<li><%= @user.favorite_food %></li>
<li><%= @user.favorite_book %></li>
<li><%= @user.club %></li>
