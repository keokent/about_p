<div id="edit">
<%= form_for(@user, :html => {:multipart => true}) do |f| %>
  <% if f.object.errors.any? %>
    <div class="error">
      <% f.object.errors.full_messages.each do |msg| %>
        <li>* <%= msg %></li>
      <% end %>
    </div>
  <% end %>
    <div class="pro_img">
      <p class="nes">顔写真を設定してね！</p>
      <%= image_tag "dummy_img2.png" %>
      <%= f.file_field :face_image %>
    <p class="btn_edit_submit"><%= f.submit %></p>
  </div>
  <div class="pro_text">
    <p class="aori">基本情報<span class="nes_notice">*青文字は必須項目です</span></p>
  <ul>
    <li><span class="nes"><%= f.label :name %></span><%= f.text_field :name, :value => session[:realname] %></li>
    <li><span class="nes"><%= f.label :nickname %></span><%= f.text_field :nickname, :value => session[:github_nickname] %></li>
    <li><span class="nes"><%= f.label :irc_name %></span><%= f.text_field :irc_name %></li>
    <li><span class="nes"><%= f.label :section %></span><%= f.select :section, Section.all.enum_for(:each_with_index).map { |item, index| [item.name, index+1] } %></li>
    <li><span class="nes"><%= f.label :job_type %></span><%= f.select :job_type, User.job_type.options %></li>
    <li><span class="nes"><%= f.label :birthday %></span><%= f.date_select :birthday, :use_month_numbers => true, :date_separator => '/', :start_year => 1950, :end_year => Time.now.year-14, :default => Date.new(1980,01,01) %></li>
    <li><%= f.label :birthplace %><%= f.text_field :birthplace %></li>
    </ul>
    <ul class="long">
    <li><p><%= f.label :ppb_join %></p><%= f.text_area :ppb_join %></li>
    <li><p><%= f.label :ppb_carrier %></p><%= f.text_area :ppb_carrier %></li>
    <li><p><%= f.label :hometown %></p><%= f.text_area :hometown %></li>
    <li><p><%= f.label :twitter_id %></p><%= f.text_area :twitter_id %></li>
    <li><p><%= f.label :blog_url %></p><%= f.text_area :blog_url %></li>
    <li><p><%= f.label :hobby %></p><%= f.text_area :hobby %></li>
     <li><p><%= f.label :strong_point %></p><%= f.text_area :strong_point %></li>
    <li><p><%= f.label :free_space %></p><%= f.text_area :free_space %></li>
  </ul>
<% end %>
</div>
</div>
